@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #2ECC71;
            --secondary-color: #27AE60;
            --accent-color: #229954;
            --text-dark: #2C3E50;
            --text-light: #ECF0F1;
            --transition: all 0.3s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 1rem;
        }

        .login-container {
            background: rgba(255, 255, 255, 0.95);
            padding: 2.5rem;
            border-radius: 1.5rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 440px;
            transform: translateY(0);
            transition: var(--transition);
        }

        .login-header {
            text-align: center;
            margin-bottom: 2.5rem;
        }

            .login-header h1 {
                color: var(--text-dark);
                font-size: 2.2rem;
                margin-bottom: 0.5rem;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 0.8rem;
            }

        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }

        label {
            display: block;
            margin-bottom: 0.6rem;
            color: var(--text-dark);
            font-weight: 500;
            font-size: 0.95rem;
        }

        .input-field {
            width: 100%;
            padding: 0.75rem 1rem; /* Adjusted padding for better spacing */
            border: 2px solid #e0e0e0;
            border-radius: 0.8rem;
            font-size: 1rem;
            transition: var(--transition);
            background: #f8f9fa;
        }

            .input-field:focus {
                outline: none;
                border-color: var(--primary-color);
                box-shadow: 0 0 0 3px rgba(46, 204, 113, 0.2);
                background: #fff;
            }

        .auth-btn {
            width: 100%;
            padding: 1rem; /* Adjusted padding for consistency */
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: var(--text-light);
            border: none;
            border-radius: 0.8rem;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            margin-top: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
        }

            .auth-btn:hover {
                background: linear-gradient(135deg, var(--secondary-color), var(--accent-color));
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(46, 204, 113, 0.3);
            }

        .error-message {
            background: #fee;
            color: #e74c3c;
            padding: 1rem;
            border-radius: 0.8rem;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.8rem;
            border: 1px solid #ffd6d6;
            font-size: 0.95rem;
        }

            .error-message i {
                font-size: 1.2rem;
            }

        @@media (max-width: 480px) {
            .login-container

        {
            padding: 2rem;
            border-radius: 1rem;
        }

        .login-header h1 {
            font-size: 1.8rem;
        }

        .input-field {
            padding: 0.7rem 1rem; /* Adjusted padding for mobile */
        }

        .auth-btn {
            padding: 0.9rem; /* Adjusted padding for mobile */
            font-size: 1rem;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <h1>
                <i class="fas fa-user-shield"></i>
                Account Login
            </h1>
        </div>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle"></i>
                @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="Auth" asp-controller="Login">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" class="input-field" placeholder="john.doe@example.com" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="input-field" placeholder="••••••••" required>
            </div>

            <button type="submit" class="auth-btn">
                <i class="fas fa-sign-in-alt"></i>
                Sign In
            </button>
        </form>
    </div>
</body>
</html>
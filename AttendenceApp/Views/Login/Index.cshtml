@{
    Layout = null;
    ViewData["Title"] = "EPAM-EM | Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EPAM-EM | Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            
            font-family: "Poppins", sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            max-width: 450px;
            width: 100%;
            text-align: center;
        }

            .login-container h2 {
                margin-bottom: 1.8rem;
                color: #333;
                font-size: 2rem;
            }

        .form-group {
            text-align: left;
            margin-bottom: 1.5rem;
        }

        label {
            font-weight: 600;
            display: block;
            margin-bottom: 0.6rem;
            color: #555;
        }

        input {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 10px;
            font-size: 1.1rem;
            transition: 0.3s;
        }

            input:focus {
                border-color: red;
                outline: none;
                box-shadow: 0 0 10px rgba(40, 167, 69, 0.3);
            }

        .error-message {
            background: #f8d7da;
            color: #721c24;
            padding: 12px;
            border-radius: 10px;
            margin-bottom: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .auth-btn {
            background: linear-gradient(135deg, orange, red);
            color: #fff;
            padding: 14px;
            border: none;
            width: 100%;
            font-size: 1.2rem;
            font-weight: 600;
            border-radius: 10px;
            cursor: pointer;
            transition: 0.3s;
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }

            .auth-btn:hover {
                background: linear-gradient(135deg, red, tomato);
                box-shadow: 0 5px 20px rgba(40, 167, 69, 0.5);
            }

        @@media (max-width: 480px) {
            .login-container

        {
            padding: 2rem;
            max-width: 90%;
        }

        .login-container h2 {
            font-size: 1.8rem;
        }

        }
    </style>
</head>
<body>
    <div class="login-container">
        <h2><i class="fas"></i> Login to Your EPAM-EM</h2>

        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle"></i> @ViewData["ErrorMessage"]
            </div>
        }

        <form method="post" asp-action="Auth" asp-controller="Login">
            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i> Email</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
                <label for="password"><i class="fas fa-lock"></i> Password</label>
                <input type="password" id="password" name="password" placeholder="Enter your password" required>
            </div>

            <button type="submit" class="auth-btn">
                <i class="fas "></i> Login
            </button>
        </form>
    </div>
</body>
</html>

@{
    Layout = null;
}
@{
    ViewData["Title"] = "Login";
}
<head>
    <title>Login Page</title>
</head>

<!-- Add FontAwesome for icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<div class="container">
    <div class="auth-form">
        <h2 class="form-title">Login to your Account</h2>

        <!-- Display Error Message -->
        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
        {
            <div class="error-message">
                <i class="fas fa-exclamation-triangle"></i> @ViewData["ErrorMessage"]
            </div>
        }

        <!-- Login Form -->
        <form method="post" asp-action="Auth" asp-controller="Login">
            <div class="form-group">
                <label for="email">
                    <i class="fas fa-envelope"></i> Email
                </label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>
            </div>

            <div class="form-group">
                <label for="password">
                    <i class="fas fa-lock"></i> Password
                </label>
                <input type="password" id="password" name="password" placeholder="Enter your Password" required>
            </div>

            <button type="submit" class="auth-btn">
                <i class="fas fa-unlock-alt"></i> Login
            </button>
        </form>
    </div>
</div>

<!-- Login Page Styling -->
<style>
    body {
        background: #f4f6f9;
        font-family: "Source Sans Pro", sans-serif;
        margin: 0;
        padding: 0;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 1rem;
    }

    .auth-form {
        max-width: 400px;
        width: 100%;
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        text-align: center;
        color: #333;
        font-size: 1.9rem;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.8rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    label {
        font-size: 1rem;
        font-weight: 600;
        color: #555;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    input {
        width: 100%;
        padding: 0.8rem 1.2rem;
        border: 2px solid #ddd;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        margin-top: 0.5rem;
        color: #333;
    }

        input:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 8px rgba(52, 152, 219, 0.2);
        }

    .auth-btn {
        background: linear-gradient(45deg, #00ced1, #00a8b5);
        color: white;
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        margin-top: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.8rem;
    }

        .auth-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 206, 209, 0.3);
        }

    /* Error message styling */
    .error-message {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        font-size: 1rem;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

        .error-message i {
            font-size: 1.4rem;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .auth-form {
            padding: 1.5rem;
        }

        .form-title {
            font-size: 1.5rem;
        }

        input {
            padding: 0.8rem;
            font-size: 0.95rem;
        }

        .auth-btn {
            font-size: 1rem;
            padding: 0.9rem;
        }
    }
</style>

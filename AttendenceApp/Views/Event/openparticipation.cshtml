@model Event

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Registration</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
        background: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 20px;
        }

        .container {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
        position: relative;
        }

        .report-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        color: #e74c3c;
        font-size: 1.8rem;
        cursor: pointer;
        transition: transform 0.3s ease;
        }

        .report-icon:hover {
        transform: scale(1.2);
        }

        .header-section {
        text-align: center;
        margin-bottom: 2rem;
        }

        h2 {
        color: #2c3e50;
        font-size: 2rem;
        font-weight: 700;
        margin: 1rem 0 0;
        }

        .icon-primary {
        color: #145a32;
        margin-bottom: 1rem;
        }

        .form-group {
        margin-bottom: 1.75rem;
        }

        .form-label {
        display: block;
        color: #34495e;
        font-weight: 600;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
        }

        .input-group {
        position: relative;
        }

        .form-control {
        width: 100%;
        padding: 0.9rem 1.2rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        color: #2c3e50;
        background: #f8f9fa;
        transition: all 0.3s ease;
        }

        .form-control:focus {
        border-color: #1abc9c;
        background: #ffffff;
        box-shadow: 0 0 0 3px rgba(26, 188, 156, 0.2);
        }

        .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #145a32;
        }

        .btn-dark {
        width: 100%;
        padding: 1rem;
        background: #1abc9c;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        }

        .btn-dark:hover {
        background: #16a085;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(26, 188, 156, 0.2);
        }

        .error-message {
        background: #ffdddd;
        color: #d9534f;
        border-left: 5px solid #d9534f;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        display: none;
        }

        .employee-error {
        display: block;
        background: #ffdddd;
        color: #d9534f;
        border-left: 5px solid #d9534f;
        padding: 10px;
        margin-bottom: 15px;
        border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/EventReport/ReportEvent?eventId=@Model.Id" class="report-icon" title="Report Event">
            <i class="fas fa-exclamation-triangle"></i>
        </a>
        <div class="header-section">
            <i class="fas fa-calendar-check fa-3x icon-primary"></i>
            <h2>Event Registration</h2>
        </div>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("EmployeeNotFound"))
        {
            <div class="employee-error">
                <i class="fas fa-exclamation-circle"></i>
                <span>Employee not found.</span>
                <a href="/Employee/Register">Please Register an employee</a>
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            
                <div class="employee-error">
                <i class="fas fa--check-circle"></i>
                    <span>@TempData["SuccessMessage"]</span>
                   
                </div>
        }

        <div id="error-message" class="error-message">
            <i class="fas fa-exclamation-circle"></i> <span id="error-text">Please enter a valid Employee ID.</span>
        </div>

        <form asp-action="OpenParticipation" asp-controller="Employee" method="post" onsubmit="return validateForm()">
            <input type="hidden" name="eventId" value="@Model.Id" />
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-calendar icon-primary"></i>
                    Event Name
                </label>
                <div class="input-group">
                    <input asp-for="Name" class="form-control" readonly />
                    <i class="fas fa-lock input-icon"></i>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-id-card icon-primary"></i>
                    Employee ID
                </label>
                <div class="input-group">
                    <input type="number" class="form-control" name="employeeId" id="employeeId" required />
                    <i class="fas fa-user input-icon"></i>
                </div>
            </div>

            <button type="submit" class="btn-dark">
                <i class="fas fa-arrow-right-to-bracket"></i>
                Confirm Registration
            </button>
        </form>
    </div>

    <script>
        function validateForm() {
            var employeeId = document.getElementById("employeeId").value;
            var errorMessage = document.getElementById("error-message");
            if (employeeId.trim() === "" || isNaN(employeeId) || employeeId <= 0) {
                errorMessage.style.display = "block";
                return false;
            }
            errorMessage.style.display = "none";
            return true;
        }
    </script>
</body>
</html>

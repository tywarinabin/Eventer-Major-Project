@model Event
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <div class="container">
        <div class="header-section">
            <i class="fas fa-calendar-check fa-3x icon-primary"></i>
            <h2>Event Registration</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="OpenParticipation" method="post">
            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-event icon-label"></i>
                    Event Name
                </label>
                <div class="input-group">
                    <input asp-for="Name" value="@Model.Name" class="form-control" readonly />
                    <i class="fas fa-lock input-icon"></i>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">
                    <i class="fas fa-id-card icon-label"></i>
                    Employee ID
                </label>
                <div class="input-group">
                    <input class="form-control" required />
                    <i class="fas fa-user input-icon"></i>
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("EmployeeNotFound"))
                {
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>Employee ID not found.</span>
                        <a href="https://localhost:7147/Employee/Register">Register new employee</a>
                    </div>
                }
            </div>

            <button type="submit" class="btn-dark">
                <i class="fas fa-arrow-right-to-bracket"></i>
                Confirm Registration
            </button>
        </form>
    </div>
</body>
</html>

<style>
    body {
        background: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 20px;
    }

    .container {
        background: #ffffff;
        border-radius: 16px;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        padding: 2.5rem;
        width: 100%;
        max-width: 500px;
        transition: transform 0.3s ease;
    }

    .header-section {
        text-align: center;
        margin-bottom: 2rem;
    }

    h2 {
        color: #2c3e50;
        font-size: 2rem;
        font-weight: 700;
        margin: 1rem 0 0;
    }

    .icon-primary {
        color: #2c3e50;
        margin-bottom: 1rem;
    }

    .form-group {
        margin-bottom: 1.75rem;
        margin-right: 1rem;
    }

    .form-label {
        display: block;
        color: #34495e;
        font-weight: 600;
        margin-bottom: 0.75rem;
        font-size: 0.95rem;
    }

    .input-group {
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 0.9rem 1.2rem;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 1rem;
        color: #2c3e50;
        background: #f8f9fa;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2c3e50;
            background: #ffffff;
            box-shadow: 0 0 0 3px rgba(44, 62, 80, 0.1);
        }

    .input-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #7f8c8d;
    }

    .btn-dark {
        width: 100%;
        padding: 1rem;
        background: #2c3e50;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
    }

        .btn-dark:hover {
            background: #34495e;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(44, 62, 80, 0.2);
        }

    .alert-success {
        background: #d4edda;
        color: #155724;
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        border-left: 4px solid #28a745;
    }

    .error-message {
        color: #dc3545;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
    }

    a {
        color: #2c3e50;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #34495e;
            text-decoration: underline;
        }

    .icon-label {
        margin-right: 0.5rem;
        color: #7f8c8d;
    }
</style>
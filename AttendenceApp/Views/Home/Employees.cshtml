@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employee List";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    :root {
        --primary-color: #2c3e50;
        --secondary-color: #3498db;
        --accent-color: #e74c3c;
        --background-color: #f8f9fa;
    }

    * {
        font-family: 'Poppins', sans-serif;
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    body {
        padding: 20px;
    }

    .container {
        max-width: 900px;
        margin: auto;
    }

    .title {
        text-align: center;
        color: green;
        margin-bottom: 20px;
    }

    .employee-card {
        margin-top:2rem;
        background: white;
        padding: 15px;
        border-radius: 12px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 15px;
        transition: 0.3s;
    }

        .employee-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .employee-info {
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .employee-icon {
        width: 50px;
        height: 50px;
        background: var(--secondary-color);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-size: 20px;
    }

    .employee-details {
        display: flex;
        flex-direction: column;
    }

    .employee-name {
        font-weight: 600;
        color: var(--primary-color);
    }

    .employee-email {
        font-size: 14px;
        color: gray;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn {
        padding: 8px 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        transition: 0.3s;
    }

    .btn-view {
        background: #27ae60;
        color: white;
    }

        .btn-view:hover {
            background: #219150;
        }

    .btn-delete {
        background: var(--accent-color);
        color: white;
    }

        .btn-delete:hover {
            background: #c0392b;
        }
</style>

<div class="container">
    <h2 class="title"><i class="fas fa-users"></i> Employee List</h2>

    @if (!Model.Any())
    {
        <p style="text-align: center; color: white;">No employees found.</p>
    }
    else
    {
        @foreach (var employee in Model)
        {
            <div class="employee-card">
                <div class="employee-info">
                    <div class="employee-icon">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="employee-details">
                        <span class="employee-name">@employee.Name</span>
                        <span class="employee-email">@employee.Email</span>
                    </div>
                </div>

                <div class="action-buttons">
                    <a href="@Url.Action("ViewEmployee", "Employee", new { id = employee.EmployeeID })" class="btn btn-view">
                        <i class="fas fa-eye"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Employee", new { id = employee.EmployeeID })" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this employee?');">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
        }
    }
</div>

@{
	ViewData["Title"] = "Create Event";
}

<div class="event-wrapper">
	<div class="hero-section">
		<h1>Create any Events with ease</h1>
		<a asp-action="Create" asp-controller="Event">
			<button class="create-event-btn">
				<i class="fas fa-plus-circle"></i> Create New Event
			</button>
		</a>
	</div>
</div>

<style>
	.event-wrapper {
		display: flex;
		justify-content: center;
		align-items: center;
		min-height: 60vh;
		padding: 2rem;
		background: rgba(255, 255, 255, 0.95);
		border-radius: 20px;
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
		backdrop-filter: blur(10px);
		width: 90%;
		margin: 80px auto 2rem auto;
	}

	.hero-section {
		display: grid;
		place-items: center;
		text-align: center;
		gap: 1.5rem;
	}

		.hero-section h1 {
			font-size: 2rem;
			background: linear-gradient(to right, #2c3e50, #3498db);
			-webkit-background-clip: text;
			-webkit-text-fill-color: transparent;
			line-height: 1.3;
		}

	.create-event-btn {
		background: linear-gradient(45deg, #00ced1, #00a8b5);
		color: white;
		padding: 1rem 2rem;
		border: none;
		border-radius: 30px;
		font-size: 1rem;
		font-weight: 700;
		cursor: pointer;
		transition: all 0.3s ease;
		text-transform: uppercase;
		letter-spacing: 1px;
		display: flex;
		align-items: center;
		gap: 0.5rem;
	}

		.create-event-btn:hover {
			transform: translateY(-3px);
			box-shadow: 0 10px 20px rgba(0, 206, 209, 0.3);
		}
</style>
